{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Project QA Assistant",
  "version": "0.1.0",
  "identifier": "com.projectqa.assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:3000",
    "frontendDist": "../.next/standalone"
  },
  "app": {
    "windows": [
      {
        "title": "Project QA Assistant",
        "width": 1600,
        "height": 1000,
        "minWidth": 1080,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "12.0"
    }
  }
}
