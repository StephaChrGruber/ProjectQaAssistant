{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://projectqaassist.local/schemas/runtime-profile.schema.json",
  "title": "Project QA Assistant Desktop Runtime Profile",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["local_fullstack", "remote_slim"]
    },
    "backend_url": {
      "type": "string",
      "format": "uri"
    },
    "backend_origin": {
      "type": "string",
      "enum": ["local", "remote"]
    },
    "data_dir": {
      "type": "string",
      "minLength": 1
    },
    "local_ports": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "web": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "backend": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "mongo": { "type": "integer", "minimum": 1, "maximum": 65535 }
      }
    },
    "llm_defaults": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "provider": { "type": "string" },
        "model": { "type": "string" },
        "base_url": { "type": "string", "format": "uri" }
      }
    },
    "feature_flags": {
      "type": "object",
      "additionalProperties": { "type": "boolean" }
    }
  },
  "required": ["mode"]
}

